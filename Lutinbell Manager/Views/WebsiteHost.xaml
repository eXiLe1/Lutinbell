             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls">
    <UserControl.Resources>
        <Style x:Key="LargeTileStyle" TargetType="Controls:Tile">
            <Setter Property="Width" Value="320" />
            <Setter Property="Height" Value="135" />
            <Setter Property="TitleFontSize" Value="18" />
        </Style>
        <Style x:Key="SmallTileStyle" TargetType="Controls:Tile">
            <Setter Property="Width" Value="157" />
            <Setter Property="Height" Value="135" />
            <Setter Property="TitleFontSize" Value="18" />
        </Style>
        <DataTemplate DataType="{x:Type viewmodels:TestViewModel}">
            <local:Test />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ReviewsViewModel}">
            <local:Reviews />
        </DataTemplate>
    </UserControl.Resources>
