    <DockPanel LastChildFill="True">
        <StackPanel x:Name="navigation" DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Test" Width="100" Margin="0 0 10 0" Style="{StaticResource AccentedSquareButtonStyle}" Command="{Binding TestCommand}" />
            <Button Content="Reviews" Width="100" Margin="10 0 10 0" Style="{StaticResource AccentedSquareButtonStyle}" Command="{Binding ReviewsCommand}" />
